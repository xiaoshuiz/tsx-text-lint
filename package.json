{
  "name": "tsx-text-lint",
  "displayName": "TSX Text Lint",
  "description": "TSX 文本检查工具",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "type": "commonjs",
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": []
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "text-lint": "node src/scripts/extract_text.mjs",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^14.x.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^4.x.x",
    "@typescript-eslint/parser": "^4.x.x",
    "cspell": "^6.31.1",
    "eslint": "^7.x.x",
    "husky": "^7.0.0",
    "textlint": "^12.2.1",
    "textlint-rule-en-capitalization": "^2.0.3",
    "textlint-rule-terminology": "^3.0.4",
    "textlint-rule-write-good": "^2.0.0",
    "ts-morph": "^16.0.0",
    "typescript": "^4.x.x"
  },
  "publisher": "xiaoshuiz",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaoshuiz/tsx-text-lint"
  },
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "license": "MIT"
}
